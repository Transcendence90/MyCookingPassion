@model MyCookingPassion.Web.ViewModels.Recipes.RecipesListViewModel
@{
    this.ViewData["Title"] = "All Рecipes, Page " + Model.PageNumber;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />

<div class="row">
    @foreach (var recipe in this.Model.Recipes)
    {
        <div class="media col-md-4 card-columns">
            <img src="@recipe.ImageUrl" width="100" class="mr-3" img-responsive>
            <div class="media-body">
                <h5 class="mt-0"><a asp-action="ById" asp-route-id="@recipe.Id">@recipe.Name</a></h5>
                @recipe.CategoryName
            </div>
        </div>
    }
</div>

<hr />

<nav aria-label="...">
    <ul class="pagination justify-content-center btn-success">
        <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>} ">
            <a class="page-link btn-success" asp-action="All" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item btn-success"><a class="page-link" asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item active" aria-current="page btn-success">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only btn-success">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item btn-success"><a class="page-link" asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if (!Model.HasNextPage) { <text> disabled </text>} ">
            <a class="page-link btn-success" asp-action="All" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>